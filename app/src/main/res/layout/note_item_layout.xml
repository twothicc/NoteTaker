<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp">
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <ImageView
            android:id="@+id/delete_button"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:visibility="invisible"
            tools:ignore="PrivateResource"
            android:contentDescription="Delete Note"
            android:background="@drawable/delete_background"/>
        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"

            android:background="@drawable/layout_border"
            android:id="@+id/Boundaries">
            <TextView
                android:id="@+id/NoteDate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_marginStart="8dp"
                tools:text="Placeholder Date"/>
            <TextView
                android:id="@+id/NoteTime"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_alignEnd="@id/NoteDate"
                android:layout_marginEnd="8dp"
                tools:text="Placeholder Time"/>

            <TextView
                android:id="@+id/NoteTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_alignParentStart="true"
                android:layout_alignParentEnd="true"
                android:layout_below="@+id/NoteDate"
                android:background="?colorPrimaryDark"
                android:textColor="@android:color/white"
                android:textAlignment="center"
                android:maxLines="2"
                tools:text="Placeholder Title"/>


            <TextView
                android:id="@+id/NoteContent"
                android:layout_width="match_parent"
                android:textAlignment="center"
                android:layout_height="wrap_content"
                android:maxLines="4"
                android:layout_below="@id/NoteTitle"
                tools:text="Placeholder Content"/>

            <TextView
                android:id="@+id/NoteAlarm"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="2dp"
                android:textAlignment="center"
                android:layout_below="@+id/NoteContent"
                android:textColor="@color/alarmcolor"
                android:textSize="12sp"
                tools:text="Alarm set for DD/MM/YYYY at HH/MM"/>




        </RelativeLayout>

    </FrameLayout>


</androidx.cardview.widget.CardView>